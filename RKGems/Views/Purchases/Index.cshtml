@model IEnumerable<RKGems.Models.Purchase>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/animation.css">

<h2 style="text-align:center; border:4px double; margin: 0 11em 0 11em">Purchase</h2>

<p>
    <a asp-action="Create" class="btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="color:black; background-color:lightgray; border:4px double black">
            <th>
                @Html.DisplayNameFor(model => model.ItemNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Gross Total
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @(item.Price * item.PurchaseWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
                    <div class="row">
                        <div class="btn button">
                            @*<span class="noselect">Framed</span>*@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="noselect" style="color:black; border: none">Edit</a>
                        </div>
                        <div style="padding:0 1em 0 0"></div>
                        <div class="btn button">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="noselect"  style="color:black; border:none">Delete</a>
                        </div>

                    </div>
                    
                </td>

                <!--<td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="height: 1.7em; font-size: 0.8em; padding: 0px 8px; border: 2px solid black">Edit</a> |-->
                @*<a asp-action="Details" asp-route-id="@item.FourPId" class="btn" style="height: 1.7em; font-size: 0.8em; padding: 0px 8px; border: 2px solid black">Details</a> |*@
                <!--<a asp-action="Delete" asp-route-id="@item.Id" class="btn" style="height: 1.7em; font-size: 0.8em; padding: 0px 8px; border: 2px solid black">Delete</a>
                </td>-->
            </tr>
            }
        </tbody>
    </table>
