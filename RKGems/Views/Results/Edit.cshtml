@model RKGems.Models.Result

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Result</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ResultId" />
            <div class="form-group">
                <label asp-for="ResultThan" class="control-label"></label>
                <input asp-for="ResultThan" class="form-control" />
                <span asp-validation-for="ResultThan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultWeight" class="control-label"></label>
                <input asp-for="ResultWeight" class="form-control" />
                <span asp-validation-for="ResultWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseId" class="control-label"></label>
                <select asp-for="PurchaseId" class="form-control" asp-items="ViewBag.PurchaseId"></select>
                <span asp-validation-for="PurchaseId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>*@
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <button type="submit" class="btn">Submit</button>
                </div>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Index" class="btn">Cancel</a>
            </div>
        </div>
        </form>
    </div>
</div>

